<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'best-restaurants.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption  d-mid-block">
        <h3>Find the best pizza places</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'hiresicecream.jpg', class: 'd-block img-fluid' %>
      <div class="carousel-caption d-mid-block">
        <h3>Food from the best chefs on the planet</h3>
      </div>
    </div>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
    <% if place.user.present? %>
      <small>Submitted by: <%= place.user.email %></small>
    <% end %>

  <% if place.comments.present? %>
    <div class="col-12">
      <blockquote>
        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.rating %></b>
        <% end %>
          <%= place.comments.last.message %>
        <small><%= place.comments.last.user.email %></small>
      </blockquote>
    </div>
  <% end %>

  </div>
<% end %>

<div class="pagination">
  <%= paginate @places %>
</div>
